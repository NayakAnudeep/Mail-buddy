# Email Automation System Environment Variables
# Copy this file to .env and fill in your actual values

# AI Provider Configuration
# Choose: claude, openai, or gemini
AI_PROVIDER=claude

# AI API Keys (use based on your provider)
# For Claude (Anthropic):
CLAUDE_API_KEY=your_claude_api_key_here

# For OpenAI GPT:
# OPENAI_API_KEY=your_openai_api_key_here

# For Google Gemini:
# GEMINI_API_KEY=your_gemini_api_key_here

# AI Model Settings (optional)
AI_MODEL=auto
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# Email Provider Configuration
# Choose: gmail, outlook, or protonmail
EMAIL_PROVIDER=gmail

# Email Credentials (use based on your provider)
EMAIL_ADDRESS=your@gmail.com
EMAIL_APP_PASSWORD=your_app_specific_password_here

# Alternative providers (uncomment the one you want to use):
# For Gmail:
# EMAIL_PROVIDER=gmail
# EMAIL_ADDRESS=your@gmail.com
# EMAIL_APP_PASSWORD=your_gmail_app_password

# For Outlook/Hotmail:
# EMAIL_PROVIDER=outlook
# EMAIL_ADDRESS=your@outlook.com
# EMAIL_APP_PASSWORD=your_outlook_app_password

# For ProtonMail:
# EMAIL_PROVIDER=protonmail
# EMAIL_ADDRESS=your@protonmail.com
# EMAIL_APP_PASSWORD=your_protonmail_app_password

# Server Configuration
PORT=3000
NODE_ENV=development

# Application Settings
DEFAULT_RESUME_TYPE=software
MAX_RECIPIENTS_PER_BATCH=50
RATE_LIMIT_DELAY=1000

# Optional: Email Template Settings
DEFAULT_SUBJECT_PREFIX="Interest in"
EMAIL_SIGNATURE="Best regards,\nYour Name"